<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.UiFragments.SignUpFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="@color/greyFont"
            android:textSize="16sp"
            android:padding="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:elevation="4dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_user"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="15dp"
            android:textColor="@color/colorPrimaryDark"/>


        <EditText
            android:id="@+id/et_email"
            android:layout_below="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/greyFont"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="30dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:elevation="4dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="15dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/et_mobile_no"
            android:layout_below="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No"
            android:textColorHint="@color/greyFont"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:maxLines="1"
            android:elevation="4dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_mobile"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="15dp"
            android:textColor="@color/colorPrimaryDark"/>


        <EditText
            android:id="@+id/et_pass"
            android:layout_below="@id/et_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginTop="30dp"
            android:textColorHint="@color/greyFont"
            android:textSize="16sp"
            android:padding="12dp"
            android:maxLines="1"
            android:elevation="4dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="15dp"
            android:textColor="@color/colorPrimaryDark"/>


        <Button
            android:id="@+id/btn_login"
            android:layout_below="@id/et_pass"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:elevation="8dp"
            android:background="@drawable/button_background"
            android:textColor="@color/colorPrimary"/>


        <RelativeLayout
            android:id="@+id/other_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_marginTop="60dp"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="40dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_facebook_bluel" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_google"
                android:layout_toEndOf="@id/card_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="40dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_google" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_email"
                android:layout_toEndOf="@id/card_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="40dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_gmail" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>