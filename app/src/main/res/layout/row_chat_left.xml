<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/current_user_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_chat_user" />

    <RelativeLayout
        android:id="@+id/meg_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_toEndOf="@id/current_user_profile"
        android:elevation="4dp"
        android:layout_marginStart="10dp"
        android:maxWidth="300dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jost_regular"
            android:padding="5dp"
            android:text="This is message demo"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:20 pm"
        android:textSize="14sp"
        android:layout_below="@+id/meg_container"
        android:layout_toEndOf="@id/current_user_profile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"/>

</RelativeLayout>