<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/city_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dubai" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dubai"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:includeFontPadding="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_stay"
                android:layout_below="@id/country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Nights / 4 Days"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginTop="-5dp"
                android:includeFontPadding="false"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/tv_staring_text"
                android:layout_below="@id/tv_stay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting from"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <RelativeLayout
                android:layout_below="@id/tv_staring_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_background_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/package_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,000"
                    android:fontFamily="@font/jost_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>